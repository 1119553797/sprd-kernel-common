CROSS_COMPILE   ?= ~/projects/sprdroid/prebuilt/linux-x86/toolchain/arm-eabi-4.4.0/bin/arm-eabi-
ARCH:=arm
CC:=$(CROSS_COMPILE)gcc
LD:=$(CROSS_COMPILE)ld


obj-m	:= plat/ core/ lgx/ 

#KDIR        := /lib/modules/$(shell uname -r)/build
#KDIR	:= /home/sean/depot/devkit_kernel/kernel/
KDIR	:= ~/projects/sprdroid/kernel/
PWD		:= $(shell pwd)

all:
	$(MAKE) -C $(KDIR) SUBDIRS=$(PWD) modules CONFIG_INNOCMMB=m CONFIG_INNOCMMB_PLAT_DEVKIT8000=m CONFIG_INNOCMMB_DEBUG=y
clean:
	$(MAKE) -C $(KDIR) SUBDIRS=$(PWD) clean
	@find . -name "Module.markers" | xargs rm -f
	@find . -name "modules.order" | xargs rm -f

